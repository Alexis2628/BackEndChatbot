# Application Settings
APP_NAME=Enterprise RAG System
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database Configuration (PostgreSQL - Optional for metadata storage)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag_system
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=rag_documents
QDRANT_VECTOR_SIZE=1536

# LLM Configuration
LLM_PROVIDER=ollama  # Options: openai, ollama, vllm
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Embeddings Configuration
EMBEDDING_PROVIDER=openai  # Options: openai, ollama
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# LangSmith (Optional - for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=rag-system

# MCP Configuration
MCP_ENABLED=true
MCP_SERVER_URL=http://localhost:8001

# Document Processing (Docling)
DOCLING_MAX_FILE_SIZE=52428800  # 50MB
DOCLING_SUPPORTED_FORMATS=["pdf","docx","txt","md","html"]
DOCLING_CHUNK_SIZE=1000
DOCLING_CHUNK_OVERLAP=200

# RAG Configuration
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
RAG_MAX_TOKENS=4000

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300  # seconds

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # seconds

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
